<li id="task-{{ t.id }}">
  <form action="/tasks/{{ t.id }}/edit" method="post"
        hx-post="/tasks/{{ t.id }}/edit" hx-target="#task-{{ t.id }}" hx-swap="outerHTML">
    <label for="title-{{ t.id }}">Title</label>
    <input id="title-{{ t.id }}" name="title" value="{{ t.title }}" required aria-describedby="hint-{{ t.id }} error-{{ t.id }}">
    <small id="hint-{{ t.id }}">Be specific and short.</small>
    {% if error %}
      <p id="error-{{ t.id }}" class="error" role="alert">{{ error }}</p>
    {% else %}
      <p id="error-{{ t.id }}" class="visually-hidden" aria-hidden="true"></p>
    {% endif %}
    <button>Save</button>
    <a href="/tasks" hx-get="/tasks/{{ t.id }}/view" hx-target="#task-{{ t.id }}" hx-swap="outerHTML">Cancel</a>
  </form>
</li>

